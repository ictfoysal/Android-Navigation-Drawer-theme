<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/nav_header_id"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="#FFFFF7"
    android:paddingLeft="15dp">

    <TextView
        android:id="@+id/menu22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:text="@string/app_name"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/menu22"
        android:text="Smictfoysal@gmail.com"
        android:textColor="@color/white"
        android:textSize="19sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@+id/app_name"
        android:src="@drawable/florist" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/header_icon"
        android:tint="@color/white" />


</RelativeLayout>